{
  "provider": {
    "name": "account-service"
  },
  "consumer": {
    "name": "signup-service"
  },
  "interactions": [
    {
      "description": "A request to /accounts",
      "request": {
        "method": "POST",
        "path": "/accounts",
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "person_id": "e2490de5-5bd3-43d5-b7c4-526e33f71304"
        },
        "matchingRules": {
          "body": {
            "$.person_id": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$.person_id": {
              "type": "Uuid"
            }
          }
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "balance": 0,
          "id": "e2490de5-5bd3-43d5-b7c4-526e33f71304"
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                }
              ],
              "combine": "AND"
            },
            "$.balance": {
              "matchers": [
                {
                  "match": "number"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$.id": {
              "type": "Uuid"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "Create account"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.10"
    }
  }
}